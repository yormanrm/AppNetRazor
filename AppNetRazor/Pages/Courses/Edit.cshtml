@page
@model AppNetRazor.Pages.Courses.EditModel
@{
    ViewData["Title"] = "Edit Course";
}
<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col">

            <div class="card mt-5">

                <div class="card-header">
                    <h2 class="text-secondary">Editar Curso</h2>
                </div>

                <div class="card-body">

                    <form method="post">

                        <!--Campo Oculto para ID-->
                        <input type="hidden" asp-for="_courseform.Id"/>

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="container" style="padding:30px">

                            <div class="form-group mb-3">
                                <div class="row d-flex justify-content-center">
                                    <div class="col-sm-2">
                                        <label asp-for="_courseform.CourseName"></label>
                                    </div>
                                    <div class="col-sm-6">
                                        <input asp-for="_courseform.CourseName" class="form-control"/>
                                    </div>
                                    <span asp-validation-for="_courseform.CourseName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <div class="row d-flex justify-content-center">
                                    <div class="col-sm-2">
                                        <label asp-for="_courseform.QuantitySessions"></label>
                                    </div>
                                    <div class="col-sm-6">
                                        <input asp-for="_courseform.QuantitySessions" class="form-control"/>
                                    </div>
                                    <span asp-validation-for="_courseform.QuantitySessions" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <div class="row d-flex justify-content-center">
                                    <div class="col-sm-2">
                                        <label asp-for="_courseform.Price"></label>
                                    </div>
                                    <div class="col-sm-6">
                                        <input asp-for="_courseform.Price" class="form-control"/>
                                    </div>
                                    <span asp-validation-for="_courseform.Price" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row d-flex justify-content-center">
                                    <div class="col-sm-2 offset-sm-2">
                                        <a asp-page="Index" class="btn btn-outline-secondary form-control">Volver A La Lista</a>
                                    </div>
                                    <div class="col-sm-4">
                                        <input type="submit" value="Editar Curso" class="btn btn-outline-success form-control"/>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </form>

                </div>

            </div>

        </div>
    </div>
</div>